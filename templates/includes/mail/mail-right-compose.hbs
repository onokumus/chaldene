<div class="box">
  <header>
    <button class="btn btn-default visible-xs m-r-15" data-toggle=canvas data-target=#email-left>
      <i class="fa fa-fw fa-bars"></i>
    </button>
    <h4 class="text-uppercase">new message</h4>
  </header>
  <div class="box-body">
    {{#if db.users}}
      <div class="form-group">
        <div class="icon-after-input">
          <select class="form-control w-100" id="select2" multiple="multiple" placeholder="To :">
              {{#each db.users}}
                  <option value="{{id}}">{{email}}</option>
              {{/each}}
              </select>
          <div class="icon">
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default btn-xs" data-toggle="collapse" data-target="#mail-cc">Cc</button>
              <button type="button" class="btn btn-default btn-xs" data-toggle="collapse" data-target="#mail-bcc">Bcc</button>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group collapse" id="mail-cc">
        <input type="text" class="form-control" placeholder="Cc :">
      </div>
      <div class="form-group collapse" id="mail-bcc">
        <input type="text" class="form-control" placeholder="Bcc :">
      </div>

      <div class="form-group">
        <div class="icon-after-input">
          <input type="text" class="form-control" placeholder="Subject :">
          <div class="icon">
            <i class="fa fa-pencil"></i>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-control" id="quill" data-theme="snow"></div>
      </div>
      <div class="form-group">
        <h4><i class="fa fa-fw fa-paperclip"></i> Attachment</h4>
        <form class="dropzone" action="#">
          <div class="fallback">
            <input name="file" type="file" multiple />
          </div>
        </form>
      </div>
      <hr>
      <button type="submit" class="btn btn-primary"><i class="fa fa-fw fa-paper-plane-o"></i> Send</button>
      <button class="btn btn-default"><i class="fa fa-times"></i> Discard</button>
    {{/if}}
  </div>
</div>
