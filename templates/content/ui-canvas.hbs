<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <header>
        <h3>Metis Canvas <small>is-fixed</small></h3>
        <div class="box-tools">
          <a href="https://github.com/metisadmin/metis-canvas" target="_blank">metis-canvas</a>
        </div>
      </header>
      <div class="box-body">
        <div class="col-sm-4 col-sm-push-4">

          <div class="btn-group" role="group" aria-label="First group">
            <button type="button" class="btn btn-default" data-toggle="canvas" data-target="#pT">
              <i class="fa fa-fw fa-lg fa-arrow-up"></i>
            </button>
            <button type="button" class="btn btn-default" data-toggle="canvas" data-target="#pR">
              <i class="fa fa-fw fa-lg fa-arrow-right"></i>
            </button>
            <button type="button" class="btn btn-default" data-toggle="canvas" data-target="#pB">
              <i class="fa fa-fw fa-lg fa-arrow-down"></i>
            </button>
            <button type="button" class="btn btn-default" data-toggle="canvas" data-target="#pL">
              <i class="fa fa-fw fa-lg fa-arrow-left"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-body">
        <h2>Full Page</h2>
        <button type="button" class="btn btn-danger" data-toggle=canvas data-target="#fC">
          <i class="fa fa-fw fa-arrows-alt"></i>
        </button>
      </div>
    </div>
  </div>
</div>



<div class="canvas is-fixed bg-wet-asphalt" id="fC">
  <div class="u-posAbsoluteCenter">
    <div class="u-flex u-flexRow u-flexWrap" style="width: 300px; height:300px">
      <div class="u-flex u-flexAlignItemsStretch" style="flex: 0 0 50% !important;">
        <div class="u-sizeFill bg-peter-river u-flex m-a-5 u-flexAlignItemsCenter u-flexJustifyCenter">
          <i class="fa fa-cubes f-3"></i>
        </div>
      </div>
      <div class="u-flex u-flexAlignItemsStretch" style="flex: 0 0 50% !important;">
        <div class="u-sizeFill bg-turquoise u-flex m-a-5 u-flexAlignItemsCenter u-flexJustifyCenter">
          <i class="fa fa-diamond f-3"></i>
        </div>
      </div>
      <div class="u-flex u-flexAlignItemsStretch" style="flex: 0 0 50% !important;">
        <div class="u-sizeFill bg-orange u-flex m-a-5 u-flexAlignItemsCenter u-flexJustifyCenter">
          <i class="fa fa-magic f-3"></i>
        </div>
      </div>
      <div class="u-flex u-flexAlignItemsStretch" style="flex: 0 0 50% !important;">
        <a class="u-sizeFill bg-wisteria u-flex m-a-5 u-flexAlignItemsCenter u-flexJustifyCenter text-white" data-toggle=canvas href="#fC">
          <i class="fa fa-gift f-3"></i>
        </a>
      </div>
    </div>
  </div>
</div>

