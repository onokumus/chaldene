---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="Mail Compose">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/insignia@5.0.0/dist/insignia.min.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.core.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.bubble.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/dropzone@5.9.3/dist/min/dropzone.min.css">

  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/insignia@5.0.0/dist/insignia.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/dropzone@5.9.3/dist/dropzone.min.js"></script>
  <script slot="scripts" is:inline src="/chaldene/assets/js/pagejs/app-mail-compose.js"></script>

<div class="columns">
    <!-- BEGIN: .column.is-fixed -->
    <div class="column is-fixed bg-white shadow-sm ps me-3" id="email-left">
      <div class="box navbar-collapse collapse mail-left" id="mail-left">
        <header>
          <div class="box-title">
            <button
              class="btn btn-block btn-danger text-uppercase"
              type="button"
              data-toggle="modal"
              data-target="#modal-mail-compose"
            >
              compose
            </button>
          </div>
          <div class="ms-auto">
            <button
              class="btn btn-primary d-md-none ms-3"
              data-toggle="canvas"
              data-target="#email-left"
            >
              <i class="fa fa-fw fa-bars"></i>
            </button>
          </div>
        </header>
        <div class="box-body">
          <ul class="nav nav-bordered">
            <li class="nav-header">Folder</li>
            <li>
              <a class="active" href="app-mail-inbox.html">
                <i class="fa fa-fw fa-envelope"></i> Inbox
                <span class="pull-end"
                  ><span class="badge bg-primary">43</span>
                </span>
              </a>
            </li>
            <li>
              <a href="#">
                <i class="fa fa-fw fa-paper-plane"></i> Sent
                <span class="pull-end">
                  <span class="badge bg-success">4</span>
                </span>
              </a>
            </li>
            <li>
              <a href="#">
                <i class="fa fa-fw fa-pencil"></i> Draft
                <span class="pull-end">
                  <span class="badge bg-warning">3</span>
                </span>
              </a>
            </li>
  
            <li>
              <a href="#">
                <i class="fa fa-fw fa-trash"></i> Trash
                <span class="pull-end">
                  <span class="badge bg-secondary">13</span>
                </span>
              </a>
            </li>
  
            <li>
              <a href="#">
                <i class="fa fa-fw fa-trash"></i> Spam
                <span class="pull-end">
                  <span class="badge bg-secondary">7</span>
                </span>
              </a>
            </li>
            <li class="nav-divider"></li>
            <li class="nav-header">Labels</li>
  
            <li>
              <a href="#">
                Service
                <span class="pull-end">4</span>
              </a>
            </li>
  
            <li>
              <a href="#">
                Support
                <span class="pull-end">7</span>
              </a>
            </li>
  
            <li>
              <a href="#">
                Request
                <span class="pull-end">4</span>
              </a>
            </li>
  
            <li>
              <div class="icon-after-input">
                <div class="border bg-white w-100 p-0">
                  <input type="text" placeholder="New Label" id="insignia" />
                </div>
  
                <div class="icon">
                  <button class="btn btn-xs btn-default">
                    <i class="fa fa-fw fa-plus"></i>
                  </button>
                </div>
              </div>
              <!-- /input-group -->
            </li>
          </ul>
        </div>
        <footer class="p-3">
          <div class="clearfix">
            <span class="pull-end">1234</span> All Mail
          </div>
        </footer>
      </div>
    </div>
    <!-- END: .column.is-fixed -->
  
    <!-- BEGIN: .column -->
    <div class="column bg-white is-flexible shadow-sm ps">
      <!-- BEGIN: .container-fluid -->
      <div class="container-fluid">
        <div class="box">
          <header>
            <button
              class="btn btn-primary d-md-none me-3"
              data-toggle="canvas"
              data-target="#email-left"
            >
              <i class="fa fa-fw fa-bars"></i>
            </button>
            <h4 class="text-uppercase">new message</h4>
          </header>
          <div class="box-body">
            <div class="form-group">
              <div class="icon-after-input">
                <select
                  class="form-control w-100"
                  id="select2"
                  multiple="multiple"
                >
                  <option value="1">Sincere@april.biz</option>
                  <option value="2">Shanna@melissa.tv</option>
                  <option value="3">Nathan@yesenia.net</option>
                  <option value="4">Julianne.OConner@kory.org</option>
                  <option value="5">Lucio_Hettinger@annie.ca</option>
                  <option value="6">Karley_Dach@jasper.info</option>
                  <option value="7">Telly.Hoeger@billy.biz</option>
                  <option value="8">Sherwood@rosamond.me</option>
                  <option value="9">Chaim_McDermott@dana.io</option>
                  <option value="10">Rey.Padberg@karina.biz</option>
                </select>
                <div class="icon">
                  <div class="btn-group" role="group" aria-label="...">
                    <button
                      type="button"
                      class="btn btn-primary btn-xs"
                      data-toggle="collapse"
                      data-target="#mail-cc">Cc</button
                    >
                    <button
                      type="button"
                      class="btn btn-primary btn-xs"
                      data-toggle="collapse"
                      data-target="#mail-bcc">Bcc</button
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group collapse" id="mail-cc">
              <input type="text" class="form-control" placeholder="Cc :" />
            </div>
            <div class="form-group collapse" id="mail-bcc">
              <input type="text" class="form-control" placeholder="Bcc :" />
            </div>
  
            <div class="form-group">
              <div class="icon-after-input">
                <input type="text" class="form-control" placeholder="Subject :" />
                <div class="icon">
                  <i class="fa fa-pencil"></i>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="form-control" id="quill" data-theme="snow"></div>
            </div>
            <div class="form-group">
              <h4><i class="fa fa-fw fa-paperclip"></i> Attachment</h4>
              <form class="dropzone" action="#">
                <div class="fallback">
                  <input name="file" type="file" multiple />
                </div>
              </form>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary"
              ><i class="fa fa-fw fa-paper-plane-o"></i> Send</button
            >
            <button class="btn btn-primary"
              ><i class="fa fa-times"></i> Discard</button
            >
          </div>
        </div>
      </div>
      <!-- END: .container-fluid -->
    </div>
    <!-- END: .column -->
</div>

  <div class="modal fade" id="modal-mail-compose" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
            ><span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Compose</h4>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="exampleInputEmail1">Email addresses</label>
              <div class="input-group">
                <input type="text" class="form-control" placeholder="To :" />
                <div class="input-group-btn">
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-toggle="collapse"
                    data-target="#mail-cc">Cc</button
                  >
                  <button
                    type="button"
                    class="btn btn-primary"
                    data-toggle="collapse"
                    data-target="#mail-bcc">Bcc</button
                  >
                </div>
              </div>
            </div>
            <div class="form-group collapse" id="mail-cc">
              <label for="exampleInputCc">Cc</label>
              <input
                type="text"
                class="form-control"
                id="exampleInputCc"
                placeholder="Cc :"
              />
            </div>
            <div class="form-group collapse" id="mail-bcc">
              <label for="exampleInputBcc">Bcc</label>
              <input
                type="text"
                class="form-control"
                id="exampleInputBcc"
                placeholder="Bcc :"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputBcc">Subject</label>
              <input type="text" class="form-control" placeholder="Subject :" />
            </div>
            <div class="form-group">
              <label for="exampleTextAreaMessage"
                >Message <small class="text-danger"
                  >Please double click the word "chaldene"</small
                >
              </label>
              <div
                class="form-control"
                id="exampleTextAreaMessage"
                data-theme="bubble"
              >
                <p>chaldene</p>
                <p>is</p>
                <p>a</p>
                <p>admin</p>
                <p>template</p>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal"
            >Close</button
          >
          <button type="button" class="btn btn-primary">
            <i class="fa fa-fw fa-paper-plane-o"></i>
            Send Mail
          </button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
</LayoutFirst>
