---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="500">

  <div class="row">
    <div class="center-block col-sm-6 col-sm-push-3">
      <div class="f-1 text-danger text-center">
        <div class="d-flex flex-row align-items-center">
          <div class="fw-bolder">5</div>
          <div class="fw-bold">0</div>
          <div class="fw-light">0</div>
          <span class="h3 text-muted ps-4">
            <i class="fa fa-fw fa-warning text-danger"></i>Something went wrong
          </span>
        </div>
      </div>
      <div class="d-b">
        <p>
          We will work on fixing that right away.
          Meanwhile, you may return to <a href="dashboard">dashboard</a> or try using the search form.
        </p>
        <form action="dashboard" method="post">
          <div class="input-group">
            <input name="search" class="form-control" placeholder="Search" type="text">
  
            <div class="input-group-btn">
              <button type="submit" name="submit" class="btn btn-danger btn-rect">
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
</LayoutFirst>