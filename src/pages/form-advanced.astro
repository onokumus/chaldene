---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="Form Advanced">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/insignia@5.0.0/dist/insignia.min.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.13/dist/flatpickr.min.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-colorpicker@2.5.3/dist/css/bootstrap-colorpicker.min.css">

  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.13/dist/flatpickr.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/insignia@5.0.0/dist/insignia.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/autosize@5.0.1/dist/autosize.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/addons/cleave-phone.us.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/bootstrap-colorpicker@2.5.3/dist/js/bootstrap-colorpicker.min.js"></script>
  <script slot="scripts" is:inline src="/chaldene/assets/js/pagejs/form-advanced.js"></script>

  <div class="row">
    <div class="col-md-6">
      <!-- BEGIN: clave.js -->
      <div class="row">
        <div class="col-md-12">
          <div class="box">
            <header>
              <h3>Cleave.js</h3>
              <div class="ms-auto">
                <a href="https://nosir.github.io/cleave.js/" target="_blank"><em>https://nosir.github.io/cleave.js/</em></a>
              </div>
            </header>
            <div class="box-body">
              <div class="input-group">
                <span class="input-group-addon" id="cp1">
                  <i class="fa fa-fw fa-phone"></i>
                </span>
                <input type="text" class="cleave-phone form-control" placeholder="Enter US phone number" aria-describedby="cp1">
              </div>
              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="cd1">
                  <i class="fa fa-fw fa-calendar"></i>
                </span>
                <input type="text" class="cleave-date1 form-control" placeholder="2016/08/20" aria-describedby="cd1">
              </div>

              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="cd2">
                  <i class="fa fa-fw fa-calendar"></i>
                </span>
                <input type="text" class="cleave-date2 form-control" placeholder="08/20" aria-describedby="cd2">
              </div>

              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="cn1">
                  123
                </span>
                <input type="text" class="text-end cleave-num form-control" placeholder="Enter Numeral" aria-describedby="cn1">
              </div>

              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="cean">
                  EAN-2
                </span>
                <input type="text" class="cleave-ean form-control" placeholder="1 123456 123456" aria-describedby="cean">
              </div>

              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="ciban">
                  German IBAN
                </span>
                <input type="text" class="cleave-iban form-control" placeholder="DE44 5001 0517 5407 3249 31" aria-describedby="ciban">
              </div>

              <hr class="dashed">
              <div class="input-group">
                <span class="input-group-addon" id="cpr1">
                  $24,08
                </span>
                <input type="text" class="text-end cleave-cpr1 form-control" placeholder="Enter Numeral" aria-describedby="cpr1">
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- END: clave.js -->

      <!-- BEGIN: autosize -->
      <div class="row">
        <div class="col-md-12">
          <div class="box bg-white">
            <div class="box-heading">
              <div class="box-title">
                <h3>Autosize</h3>
              </div>
              <div class="ms-auto">
                <a href="http://www.jacklmoore.com/autosize/" target="_blank"><em>http://www.jacklmoore.com/autosize/</em></a>
              </div>
            </div>
            <div class="box-body">
              <form class="form-horizontal">
                <div class="form-group">
                  <label for="textarea1" class="col-sm-4 control-label">Autosize Text Area</label>
                  <div class="col-sm-8">
                    <textarea class="form-control" rows="3" placeholder="Type ..." id="autosize"></textarea>
                  </div>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
      <!-- END: autosize -->
    </div>

    <div class="col-md-6">
      <!-- BEGIN: flatpickr -->
      <div class="row">

        <div class="col-md-12">
          <div class="box bg-white">
            <div class="box-heading">
              <div class="box-title">
                <h3>flatpickr</h3>
              </div>
              <div class="ms-auto">
                <a href="https://chmln.github.io/flatpickr/" target="_blank"><em>https://chmln.github.io/flatpickr/</em></a>
              </div>
            </div>
            <div class="box-body">
              <input class="form-control flatpickr" ddata-date-format="d-m-Y" placeholder="European Format ('d-m-Y')">
              <hr class="dashed">

              <input class="form-control flatpickr" ddata-date-format="m/d/Y" placeholder="American Format ('m/d/Y')">
              <hr class="dashed">

              <input class="form-control flatpickr" ddata-date-format="l, F j, Y" placeholder="Fancy Textual Format ('l, F j, Y')">
              <hr class="dashed">

              <input class="form-control flatpickr" ddata-enable-time="true" placeholder="Pick date and time" readonly="readonly">
              <hr class="dashed">

              <input class="form-control flatpickr" ddata-enable-time="true" data-time_24hr="true" placeholder="24 hour time" readonly="readonly">
              <hr class="dashed">

              <input class="form-control flatpickr" ddata-enable-time="true" data-enable-seconds="true" placeholder="Pick date and time" readonly="readonly">
              <hr class="dashed">

              <div>
                <input class="form-control flatpickr" type="text" ddata-inline="true" placeholder="Pick a date below" readonly="readonly">
              </div>
              <hr class="dashed">

            </div>
          </div>
        </div>
      </div>
      <!-- END: flatpickr -->

    </div>
  </div>

  <!-- BEGIN: bootstrap-colorpicker -->
  <div class="row">
    <div class="col-md-12">
      <div class="box bg-white">
        <div class="box-heading">
          <div class="box-title">
            <h3>Bootstrap Colorpicker</h3>
          </div>
          <div class="ms-auto">
            <a href="https://github.com/itsjavi/bootstrap-colorpicker/" target="_blank"><em>http://mjolnic.com/bootstrap-colorpicker/</em></a>
          </div>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-sm-3">
              <input id="cp1" type="text" class="color-picker form-control" value="#5367ce" />
            </div>
            <div class="col-sm-3">
              <div class="input-group color-picker">
                <input type="text" value="#00AABB" class="form-control" />
                <span class="input-group-addon"><i></i></span>
              </div>
            </div>
            <div class="col-sm-3">
              <div class="dib" id="cp7"></div>
            </div>
            <div class="col-sm-3">
              <input type="text" class="form-control" id="cp6" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END: bootstrap-colorpicker -->

  <!-- BEGIN: select-2 -->
  <div class="row">
    <div class="col-md-12">
      <div class="box bg-white">
        <div class="box-heading">
          <div class="box-title">
            <h3>Select2</h3>
          </div>
          <div class="ms-auto">
            <a href="https://select2.github.io/" target="_blank">https://select2.github.io/</a>
          </div>
        </div>
        <div class="box-body">
          <form class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label">Single select boxes</label>
              <div class="col-sm-10">
                <select class="form-control size-full select2">
                  <option value="1">Leanne Graham</option>
                  <option value="2">Ervin Howell</option>
                  <option value="3">Clementine Bauch</option>
                  <option value="4">Patricia Lebsack</option>
                  <option value="5">Chelsey Dietrich</option>
                  <option value="6">Mrs. Dennis Schulist</option>
                  <option value="7">Kurtis Weissnat</option>
                  <option value="8">Nicholas Runolfsdottir V</option>
                  <option value="9">Glenna Reichert</option>
                  <option value="10">Clementina DuBuque</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Multiple select boxes</label>
              <div class="col-sm-10">
                <select class="form-control size-full select2" multiple="multiple">
                  <option value="1">Leanne Graham</option>
                  <option value="2">Ervin Howell</option>
                  <option value="3">Clementine Bauch</option>
                  <option value="4">Patricia Lebsack</option>
                  <option value="5">Chelsey Dietrich</option>
                  <option value="6">Mrs. Dennis Schulist</option>
                  <option value="7">Kurtis Weissnat</option>
                  <option value="8">Nicholas Runolfsdottir V</option>
                  <option value="9">Glenna Reichert</option>
                  <option value="10">Clementina DuBuque</option>
                </select>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- END: select-2 -->

  <!-- BEGIN: insignia -->
  <div class="box">
    <header>
      <h4>insignia</h4>
      <div class="ms-auto">
        <a href="https://github.com/bevacqua/insignia"> insignia home</a>
      </div>
    </header>
    <div class="box-body">
      <div class="border bg-white w-100">
        <input type="text" id="insignia" value="chaldene admin template">
      </div>
    </div>
  </div>

  <!-- END: insignia -->

</LayoutFirst>
