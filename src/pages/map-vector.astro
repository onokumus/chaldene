---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="Vector Map">
  <link slot="styles" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jqvmap.min.css">
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jquery.vmap.min.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/examples/js/jquery.vmap.sampledata.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/maps/jquery.vmap.usa.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/maps/jquery.vmap.world.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/maps/jquery.vmap.europe.js"></script>
  <script slot="scripts" is:inline src="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/maps/jquery.vmap.germany.js"></script>
  <script slot="scripts" is:inline src="/chaldene/assets/js/pagejs/map-vector.js"></script>

  <div class="row">
    <div class="col-sm-6">
      <div class="box">
        <header>
          <h4 class="f-n">World Vector Map</h4>
        </header>
        <div class="box-body">
          <div id="jmap-world" style="height: 400px; width: 100%;"></div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="box">
        <header>
          <h4 class="f-n">USA Vector Map</h4>
        </header>
        <div class="box-body">
          <div id="jmap-usa" style="height: 400px; width: 100%;"></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      <div class="box">
        <header>
          <h4 class="f-n">Europe Vector Map</h4>
        </header>
        <div class="box-body">
          <div id="jmap-europe" style="height: 400px; width: 100%;"></div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="box">
        <header>
          <h4 class="f-n">Germany Vector Map</h4>
        </header>
        <div class="box-body">
          <div id="jmap-germany" style="height: 400px; width: 100%;"></div>
        </div>
      </div>
    </div>
  </div>
  

</LayoutFirst>
