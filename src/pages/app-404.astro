---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="404">

<!-- BEGIN: .row -->
<div class="row">
  <div class="center-block col-sm-6 col-sm-push-3">
    <div class="f-1 text-warning text-center">
      <div class="d-flex flex-row align-items-center">
        <div class="fw-bolder">4</div>
        <div class="fw-bold">0</div>
        <div class="fw-light">4</div>
        <span class="h3 text-muted ps-4">
          <i class="fa fa-fw fa-warning text-warning"></i>Page Not Found
        </span>
      </div>
    </div>
    <div class="d-b">
      <p>
        We could not find the page you were looking for.
        Meanwhile, you may return to <a href="dashboard">dashboard</a> or try using the search form.
      </p>
      <form action="dashboard" method="post">
        <div class="input-group">
          <input name="search" class="form-control" placeholder="Search" type="text">

          <div class="input-group-btn">
            <button type="submit" name="submit" class="btn btn-warning btn-rect">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- END: .row -->

</LayoutFirst>