        </div>
      </div>
    </div>
  </div>
  <!-- END: .row -->

  <!-- BEGIN: .row -->
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Button Example</h3>
        </div>
        <div class="panel-body">
          <button type="button" class="btn btn-default">
            bootstrap default
          </button>
          <button
            type="button"
            class="btn btn-default bg-clouds text-alizarin b-w-5 b-emerland"
          >
            alizarin
          </button>
          <button
            type="button"
            class="btn btn-lg bg-wisteria text-white h3 f-b b-r-5 b-peter-river b-w-3"
          >
            wisteria</button
          >
        </div>
        <div class="panel-footer">Panel Footers</div>
      </div>
    </div>
