          <h4>Header 4</h4>
          <span class="label label-info">label</span>
        </header>
        <div class="box-body">box-body</div>
        <header class="bg-info">
          <h5>Header 5</h5>
          <span class="badge bg-success">label</span>
        </header>
        <div class="box-body">box-body</div>
        <header class="bg-primary">
          <h6>Header 6</h6>
          <span class="label label-danger">label</span>
        </header>
        <div class="box-body">box-body</div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="box">
        <header>
          <h4>Collapsible</h4>
          <div class="ms-auto">
            <a href="#" data-box="collapse">click</a>
          </div>
        </header>
        <div class="box-body collapse in">
          <p>lorem ...</p>
        </div>
      </div>

      <div class="box">
        <header>
          <h4>Collapsed</h4>
          <div class="ms-auto">
            <a href="#" data-box="collapse">click</a>
          </div>
        </header>
        <div class="box-body collapse">
          <p>lorem ...</p>
        </div>
      </div>

      <div class="box">
        <header>
          <h4>Closable</h4>
          <div class="ms-auto">
            <a href="#" data-box="close">close</a>
