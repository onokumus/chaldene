---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="Widgets">
  <script
    slot="scripts"
    is:inline
    src="https://cdn.jsdelivr.net/npm/jquery-countdown@2.2.0/dist/jquery.countdown.min.js"
  ></script>
  <script
    slot="scripts"
    is:inline
    src="/chaldene/assets/js/pagejs/ui-widgets.js"
  ></script>

  <!-- BEGIN: .box -->
  <div class="box">
    <header class="bg-emerland">
      <h4>Only body</h4>
      <!-- begin ms-auto -->
      <div class="ms-auto">
        <a class="fa fa-fw fa-minus" href="#" data-box="collapse"></a>
        <a class="fa fa-fw fa-times" href="#" data-box="close"></a>
      </div>
      <!-- END: ms-auto -->
    </header>
    <div class="box-body collapse in">
      <!-- BEGIN: .row -->
      <div class="row inview">
        <div class="col-md-3">
          <div class="box">
            <div class="box-body">box-body</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box border">
            <div class="box-body">box-body with border</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box border border-end-4">
            <div class="box-body">box-body with border & radius</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box bg-emerland">
            <div class="box-body">box-body background</div>
          </div>
        </div>
      </div>
      <!-- END: .row -->
    </div>
  </div>
  <!-- END: .box -->

  <!-- BEGIN: .box -->
  <div class="box">
    <header>
      <h4>With Header</h4>
      <!-- begin ms-auto -->
      <div class="ms-auto">
        <a class="fa fa-fw fa-minus" href="#" data-box="collapse"></a>
        <a class="fa fa-fw fa-times" href="#" data-box="close"></a>
      </div>
      <!-- END: ms-auto -->
    </header>
    <div class="box-body collapse in">
      <!-- BEGIN: .row -->
      <div class="row inview">
        <div class="col-md-3">
          <div class="box">
            <header>
              <h4>Header</h4>
            </header>
            <div class="box-body">box-body</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box border">
            <header class="border-bottom">
              <h4>Header</h4>
            </header>
            <div class="box-body">box-body with border</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box border border-end-4">
            <header class="border-bottom">
              <h4>Header</h4>
            </header>
            <div class="box-body">box-body with border & radius</div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box bg-emerland">
            <header class="border-bottom bg-danger">
              <h4>Header</h4>
            </header>
            <div class="box-body">box-body background</div>
          </div>
        </div>
      </div>
      <!-- END: .row -->
    </div>
  </div>
  <!-- END: .box -->

  <!-- BEGIN: .box -->
  <div class="box">
    <header>
      <h4>With Footer</h4>
      <!-- begin ms-auto -->
      <div class="ms-auto">
        <a class="fa fa-fw fa-minus" href="#" data-box="collapse"></a>
        <a class="fa fa-fw fa-times" href="#" data-box="close"></a>
      </div>
      <!-- END: ms-auto -->
    </header>
    <div class="box-body collapse in">
      <!-- BEGIN: .row -->
      <div class="row inview">
        <div class="col-md-3">
          <div class="box">
            <div class="box-body">box-body</div>
            <footer>Footer</footer>
          </div>
        </div>

        <div class="col-md-3">
          <div class="box border">
            <div class="box-body">box-body with border</div>
            <footer class="b-t">Footer</footer>
