---
import LayoutFirst from "../layouts/LayoutFirst.astro";
---

<LayoutFirst title="Chart.js">
  <!-- BEGIN: .row -->
  <div class="row inview">
    <!-- BEGIN: lineChart -->
    <div class="col-sm-6">
      <div class="box">
        <header class="b-b">
          <h4>Line Chart</h4>
          <!-- begin box-tools -->
          <div class="box-tools">
            <a class="fa fa-fw fa-minus" href="#" data-box="collapse"></a>
            <a class="fa fa-fw fa-times" href="#" data-box="close"></a>
          </div>
          <!-- END: box-tools -->
        </header>
        <div class="box-body collapse in">
          <canvas id="lineChart" width="200" height="100"></canvas>
        </div>
      </div>
    </div>
    <!-- END: lineChart -->

    <!-- BEGIN: barChart -->
    <div class="col-sm-6">
      <div class="box">
        <header class="b-b">
          <h4>Bar Chart</h4>
