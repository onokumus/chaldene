  <link
    slot="styles"
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.css"
  />
  <script
    slot="scripts"
    is:inline
    src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"
  ></script>
  <script
    slot="scripts"
    is:inline
    src="/chaldene/assets/js/pagejs/chart-chartjs.js"
  ></script>
