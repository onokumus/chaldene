    </div>

    <!-- END: timeline left -->

    <!-- BEGIN: timeline right -->

    <div class="col-sm-6">
      <div class="f-3">Timeline Right</div>
      <ul class="timeline is-right">
        <li class="timeline-item inview">
          <div class="timeline-icon">
            <i class="fa fa-fw fa-search"></i>
          </div>
          <div class="timeline-info">
            <header class="timeline-heading">
              <div class="timeline-time">30.08.2016</div>
              <div class="timeline-title">John shared video</div>
            </header>
            <div class="timeline-content bg-white">
              <div class="embed-responsive embed-responsive-16by9">
                <iframe
