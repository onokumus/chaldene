---
import Base from "./Base.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Base title={title}>
  <Fragment slot="head">
    <slot name="styles" />
  </Fragment>
  <Fragment slot="body">
      <!-- begin .app-login -->
      <div class="app-login">
        <div
          class="box border text-center shadow-sm animate__animated animate__fadeInLeft rounded p-4"
        >
          <slot />
        </div>
        <!-- /.box -->
      </div>
      <!-- /.app-login -->
  </Fragment>
  <Fragment slot="footer">
    <slot name="scripts" />
  </Fragment>
</Base>
