---
import CssVendor from '../components/CssVendor.astro';
import HeaderCanvas from '../components/HeaderCanvas.astro';
import HeaderNavBar from '../components/HeaderNavBar.astro';
import JsVendor from '../components/JsVendor.astro';
import MetaVendor from '../components/MetaVendor.astro';
import Sidebar from '../components/Sidebar.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">

<head>
  <MetaVendor />
  <title>Chaldene - {title}</title>

  <CssVendor />

  <slot name="styles" />

</head>

<body>
  <!-- begin .app -->
  <div class="app">
    <!-- begin .app-wrap -->
    <div class="app-wrap">
      <!-- begin .app-heading -->
      <header class="app-heading">
        <HeaderCanvas />
        <HeaderNavBar />
      </header>
      <!-- END:  .app-heading -->

      <!-- begin .app-container -->
      <div class="app-container">

        <Sidebar />

        <!-- begin side-collapse-visible bar -->
        <div class="side-visible-line hidden-xs" data-side="collapse">
          <i class="fa fa-caret-left"></i>
        </div>
        <!-- begin side-collapse-visible bar -->

        <!-- begin .app-main -->
        <div class="app-main">

          <!-- begin .main-heading -->
          <header class="main-heading shadow-2dp">
            <!-- begin dashhead -->
            <div class="dashhead bg-white">
              <div class="dashhead-titles">
                <h6 class="dashhead-subtitle">
                  chaldene
                  / utility
                </h6>
                <h3 class="dashhead-title">{title}</h3>
              </div>

              <div class="dashhead-toolbar">
                <div class="dashhead-toolbar-item">
                  <a href="index.html">chaldene</a>
                  / utility
                  / {title}
                </div>
              </div>
            </div>
            <!-- END: dashhead -->

          </header>
          <!-- END: .main-heading -->

          <!-- begin .main-content -->
          <div class="main-content bg-clouds">

            <!-- begin .container-fluid -->
            <div class="container-fluid p-t-15">

				<slot/>
			</div>
            <!-- END: .container-fluid -->

          </div>
          <!-- END: .main-content -->

          <!-- begin .main-footer -->
          <footer class="main-footer bg-white p-a-5">
            main footer
          </footer>
          <!-- END: .main-footer -->

        </div>
        <!-- END: .app-main -->
      </div>
      <!-- END: .app-container -->

      <!-- begin .app-footer -->
      <footer class="app-footer p-t-10 text-white">
        <div class="container-fluid">
          <p class="text-center small">
            Copyright chaldene v0.2.4 &copy; 2016
          </p>
        </div>
      </footer>
      <!-- END: .app-footer -->

    </div>
    <!-- END: .app-wrap -->
  </div>
  <!-- END: .app -->

  <span class="fa fa-angle-up" id="totop" data-plugin="totop"></span>

  <ThemeSwitcher />

  <JsVendor />

  <slot name="scripts"></slot>
</body>

</html>

