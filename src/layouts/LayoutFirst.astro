---
import Base from "./Base.astro";
import AppFooter from "../components/Footer/AppFooter.astro";
import MainFooter from "../components/Footer/MainFooter.astro";
import HeaderCanvas from "../components/HeaderCanvas.astro";
import HeaderNavBar from "../components/HeaderNavBar.astro";
import Sidebar from "../components/Sidebar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Base title={title}>
  <Fragment slot="head">
    <slot name="styles" />
  </Fragment>
  <Fragment slot="body">
    <!-- begin .app-heading -->
    <header class="app-heading">
      <HeaderCanvas />
      <HeaderNavBar />
    </header>
    <!-- END:  .app-heading -->

    <!-- begin .app-container -->
    <div class="app-container">
      <Sidebar />

      <!-- begin side-collapse-visible bar -->
      <div class="side-visible-line d-none d-md-block" data-side="collapse">
        <i class="fa fa-caret-left"></i>
      </div>
      <!-- begin side-collapse-visible bar -->

      <!-- begin .app-main -->
      <div class="app-main">
        <!-- begin .main-heading -->
        <header class="main-heading shadow-sm">
          <!-- begin dashhead -->
          <div class="dashhead bg-white">
            <div class="dashhead-titles">
              <h6 class="dashhead-subtitle">chaldene / utility</h6>
              <h3 class="dashhead-title">{title}</h3>
            </div>

            <div class="dashhead-toolbar">
              <div class="dashhead-toolbar-item">
                <a href="index.html">chaldene</a>
                / utility / {title}
              </div>
            </div>
          </div>
          <!-- END: dashhead -->
        </header>
        <!-- END: .main-heading -->

        <!-- begin .main-content -->
        <div class="main-content bg-light">
          <!-- begin .container-fluid -->
          <div class="container-fluid pt-3">
            <slot />
          </div>
          <!-- END: .container-fluid -->
        </div>
        <!-- END: .main-content -->

        <MainFooter />
      </div>
      <!-- END: .app-main -->
    </div>
    <!-- END: .app-container -->

    <AppFooter />
  </Fragment>
  <Fragment slot="footer">
    <slot name="scripts" />
  </Fragment>
</Base>
